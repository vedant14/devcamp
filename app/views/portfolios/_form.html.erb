<%= form_for(@portfolio_item) do |form| %>
<% if portfolio_item.errors.any? %>
  <% portfolio_item.errors.full_messages.each do |error| %>
   <%= js add_gritter( error, title: "Error!", sticky: false) %>
  <% end %>
<% end %>
<div class='row'>
  <div class='col-md-6'>
    <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', autofocus: true %>
    </div>
    <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: 'form-control' %>
    </div>
    <div class="form-group " >
      <label class= "btn btn-info btn-block">
        Upload a main image<%= form.file_field :main_image, style: 'display:none;' %>
      </label>
    </div>
    <div class="form-group">
      <label class= "btn btn-info btn-block">
        Upload a thumb image<%= form.file_field :thumb_image, style: 'display:none;' %>
      </label>
    </div>
  </div>
  <div class='col-md-6'>
    <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 13 %>
    </div>
  </div>
</div>
<div class='md-col-12'>
  <h2>Technologies Used</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', f: technology_form %>
      <% end %>
    </div>
    <% plus = fa_icon "plus-square" %>
    <div class = "icon-big">
      <%= link_to_add_association plus, form, :technologies %>
    </div>
    <div class="form-group">
      <%= form.submit "Submit Portfolio Item", class:"btn btn-primary btn-block" %>
    </div>
</div>
<% end %>
